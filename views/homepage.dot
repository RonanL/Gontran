<div class="content">
{{~it.articles :article:index}}
  <article>
    <a href="{{=article.filename}}">{{=article.metadata.title}}</a>
    <p class="publication-info">
      Published by {{=article.metadata.author.shortName}} on 
      <time datetime="{{=article.pubDate}}">{{=article.pubDateString}}</time>
    <p>
  </article>
{{~ }}
</div>